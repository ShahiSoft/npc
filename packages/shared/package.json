{
  "name": "@nusantara/shared",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist",
    "test": "pnpm run build && node dist/tests/run.js",
    "lint": "pnpm exec eslint --ext .ts 'src' --max-warnings 0",
    "eslint:fix": "pnpm exec eslint --ext .ts 'src' --fix",
    "format": "pnpm exec prettier --write 'src/**/*.{ts,md,json}'",
    "docs": "typedoc --options typedoc.json",
    "migrate": "knex --knexfile knexfile.js migrate:latest",
    "migrate:rollback": "knex --knexfile knexfile.js migrate:rollback",
    "seed": "knex --knexfile knexfile.js seed:run",
    "migrate:status": "knex --knexfile knexfile.js migrate:status",
    "migrate:smoke": "node scripts/smoke-migrations.js",
    "test:ephemeral-db": "node scripts/ephemeral-db.js",
    "codegen": "node scripts/generate-client.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.17",
    "@types/koa": "^2.13.5",
    "knex": "^2.5.0",
    "pg": "^8.11.0",
    "rimraf": "^5.0.0",
    "testcontainers": "^11.11.0",
    "sqlite3": "^5.1.6",
    "openapi-typescript": "^7.10.1"
  },
  "dependencies": {
    "dotenv": "^16.1.4",
    "ioredis": "^5.3.2",
    "jose": "^5.1.0"
  },
  "knex": {
    "migrations": {
      "tableName": "knex_migrations"
    }
  }
}
