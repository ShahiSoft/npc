{
  "name": "nusantara-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "pnpm -w -r run build",
    "lint": "pnpm -w exec eslint --ext .ts,.tsx 'packages/**/src' --max-warnings 0",
    "eslint:fix": "pnpm -w exec eslint --ext .ts,.tsx 'packages/**/src' --fix",
    "format": "pnpm -w exec prettier --write 'packages/**/src/**/*.{ts,tsx,js,json,md}'",
    "test": "turbo run test",
    "typecheck": "pnpm --filter @nusantara/shared run typecheck && pnpm --filter @nusantara/sample-consumer run typecheck",
    "docs:types": "pnpm --filter @nusantara/shared run docs",
    "bootstrap": "corepack enable && corepack prepare pnpm@latest --activate && pnpm install",
    "ci:local": "pnpm install && pnpm run build",
    "prepare": "husky install"
    ,
    "infra:up": "docker compose -f docker-compose.dev.yml up -d",
    "infra:down": "docker compose -f docker-compose.dev.yml down -v",
    "infra:logs": "docker compose -f docker-compose.dev.yml logs --follow",
    "migrate:local": "cross-env $(cat .env.development | xargs) pnpm --filter @nusantara/shared run migrate && pnpm --filter @nusantara/shared run seed && pnpm --filter @nusantara/shared run migrate:smoke"
  },
  "devDependencies": {
    "turbo": "^1.8.3",
    "eslint": "^8.49.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "prettier": "^2.8.8",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "typescript": "^5.4.0",
    "typedoc": "^0.25.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
